- title "Tasks"

%table
  %tr
    %th Item
    %th Description
  - for task in @tasks
    %tr
      %td= task.item
      %td= task.description
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Task", new_task_path
